{
    "name": "bravecollective/timerboard",
    "type": "project",
    "autoload": {
        "psr-4": {
            "Brave\\TimerBoard\\": "src"
        }
    },
    "repositories": [
        { "type": "git", "url": "https://github.com/bravecollective/neucore-api.git" },
        { "type": "git", "url": "https://github.com/bravecollective/sso-basics.git" },
        { "type": "git", "url": "https://github.com/bravecollective/web-ui.git" },
        { "type": "git", "url": "https://github.com/tkhamez/slim-role-auth.git"  }
    ],
    "require": {
        "php": "^7.0",
        "ext-json": "*",
        "frontpack/composer-assets-plugin": "^0.9",
        "bravecollective/neucore-api": "*@dev",
        "bravecollective/sso-basics": "0.1.1",
        "bravecollective/web-ui": "*@dev",
        "tkhamez/slim-role-auth": "0.3.0",
        "vlucas/phpdotenv": "^2.4",
        "doctrine/orm": "^2.0",
        "bryanjhv/slim-session": "^3.5"
    },
    "config": {
        "assets-dir": "web/assets",
        "platform": {
            "php": "7.0.0"
        }
    },
    "scripts": {
        "db:update": [
            "doctrine orm:schema-tool:update --force"
        ],
        "compile": [
            "doctrine orm:schema-tool:update --force"
        ]
    }
}
